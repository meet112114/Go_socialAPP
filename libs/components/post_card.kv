<PostCard>:
    orientation: 'vertical'
    size_hint_y: None
    height: "380dp"
    spacing: 2
    elevation: 0

    
    MDBoxLayout:
        padding: 1
        adaptive_height: True

        OneLineAvatarListItem:
            text: f'[b][size=14]{root.username}[/size][/b]'
            divider: None
            _no_ripple_effect: True

            ImageLeftWidget:
                radius: [15,]
                source: root.profile_pic 
                      
        MDIconButton:
            icon: 'dots-vertical'

    # Post
    AsyncImage:
        adaptive_height: True
        source: root.post
        allow_stretch: True 
        keep_ratio: False  

    # Reactions
    MDBoxLayout:
        padding: 5, 0, 0, 0         
        spacing: 2
        adaptive_height: True 
 

    MDBoxLayout:
        orientation: 'vertical'
        padding: 5, 0, 0, 0  
        spacing: 2
        adaptive_height: True 

        MyLabel:
            markup: True
            text: f'[b]{root.username}[/b] {root.caption}'   

    

    MDBoxLayout:
        padding: 5, 0, 0, 0
        spacing: 2
        adaptive_height: True 

       



<MyLabel@MDLabel>
    adaptive_height: True
    font_size: 12

<HalfOpacityLabel@MyLabel>:
    theme_text_color: 'Custom'
    text_color: 0, 0, 0, 0.5