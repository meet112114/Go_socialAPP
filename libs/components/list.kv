<List>:
    orientation: 'vertical'
    size_hint_y: None
    elevation: 0
    md_bg_color: 0.5, 0.5, 0.5, 1

    MDGridLayout:
        cols: 1
        spacing: dp(15)  
        adaptive_height: True

        MDLabel:
            text: root.created_at
            font_size: '12sp' 
            size_hint_y: None
            halign: 'right'
            valign: 'top'
            height: self.texture_size[1]
            padding_x: dp(10)
            # padding_y: dp(10)
            color: "white"
        MDLabel:
            text: root.text
            size_hint_y: None
            height: self.texture_size[1]
            halign: 'center'
            color: "white"
            padding_x: dp(10)
            padding_y: dp(15)